#!/bin/bash

# Wrapper script for essential-tools-installer
# This script can be placed anywhere and will find the actual scripts

# Find the script directory
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

# Source configuration
if [[ -f "$SCRIPT_DIR/config.sh" ]]; then
    source "$SCRIPT_DIR/config.sh"
else
    echo "Error: config.sh not found in $SCRIPT_DIR"
    exit 1
fi

# Ensure we're in the build directory
cd "$BUILD_DIR" || {
    echo "Error: Could not access build directory: $BUILD_DIR"
    exit 1
}

# Run the main installer from the scripts directory
exec "$SCRIPT_DIR/scripts/install-all-tools.sh" "$@"
